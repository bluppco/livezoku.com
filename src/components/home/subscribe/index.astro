---

// IMPORT ASTRO ATOMS
import ButtonRedTextlg from "@/atoms/buttons/red/lg/index.astro"
import HeadingTwoXL from "@/atoms/headings/two/wider/index.astro"
import ParagraphXlCenter from "@/atoms/paragraph/xl/center/index.astro"

// GET ASTRO PROPS
const {

    button_text,
    description,
    title,

} = Astro.props

---

<section class="bg-orange-100 h-100">
    <div class="pt-12 space-y-6">
        <div class="pb-6">
            <HeadingTwoXL>{ title }</HeadingTwoXL>
        </div>
        <ParagraphXlCenter>{ description }</ParagraphXlCenter>
        <div class="text-center pb-8 gap-7">
            <input
                class="relative items-center text-center font-thin justify-center py-2 px-10 text-gray bg-white"
                placeholder="First Name"
                type="text"
            />
            <input
                class="relative items-center text-center font-thin justify-center py-2 px-10 text-gray bg-white"
                placeholder="Email"
                type="text"
            />
            <ButtonRedTextlg>{ button_text }</ButtonRedTextlg>
        </div>
    </div>
</section>

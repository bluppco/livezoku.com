---

// IMPORT ASTRO COMPONENTS
import Header from "@/components/home/header/index.astro"

// IMPORT ASTRO ATOMS
import ParagraphRegularCenterWhite from "@/atoms/paragraph/regular/center/white/index.astro";
import ListItemXL from "@/atoms/list-items/xl/index.astro";
import ButtonBlack from "@/atoms/buttons/black/index.astro"
import ListItemRed from "@/atoms/list-items/red/index.astro"

// GET ASTRO PROPS
const {

        button_text,
        heading1,
        heading2,
        heading3,
        heading4,
        heading1_desc1,
        heading2_desc1,
        heading3_desc1,
        heading4_desc1,

} = Astro.props

---

<section class="relative flex justify-center items-center overflow-hidden ">


    <video autoplay loop muted plays-inline class="h-auto w-auto sm:bg-cover" >
        <source 
            src="/video.mp4"
            type="video/mp4"
        />
    </video>

    <!-- <Header
        title="ZOKU"
        sidetitle1="Menu"
        sidetitle2="Locations"
        button_text="Book Now"
        sidetitle2_description1="AMSTERDAM"
        sidetitle2_description2="COPENHAGEN"
        sidetitle2_description3="PARIS"
        sidetitle2_description4="VIENNA"
        button_description1="AMSTERDAM"
        button_description2="COPENHAGEN"
        button_description3="PARIS"
        button_description4="VIENNA"
    /> -->
    <!-- Locations -->
    <div class="sm:invisible md:visible absolute cursor-pointer top-36 flex justify-between space-x-24">
        <div class="p-4 text-center items-center space-y-3">
            <ListItemXL>{ heading1 }</ListItemXL>
            <ParagraphRegularCenterWhite>{ heading1_desc1 }</ParagraphRegularCenterWhite>
        </div>
        <div class="p-4 text-center items-center space-y-3">
            <ListItemXL>{ heading2 }</ListItemXL>
            <ParagraphRegularCenterWhite>{ heading2_desc1 }</ParagraphRegularCenterWhite>
        </div>
        <div class="p-4 text-center items-center space-y-3">
            <ListItemXL>{ heading3 }</ListItemXL>
            <ParagraphRegularCenterWhite>{ heading3_desc1 }</ParagraphRegularCenterWhite>
        </div>
        <div class="p-4 text-center items-center space-y-3">
            <ListItemXL>{ heading4 }</ListItemXL>
            <ParagraphRegularCenterWhite>{ heading4_desc1 }</ParagraphRegularCenterWhite>
        </div>
    </div>
    <!-- Input -->
    <div class="absolute sm:invisible md:visible top-60 flex justify-end pb-8">
        <input 
            class="text-center my-3 box-border border-r-2 bg-white focus:outline-none"
            onclick="dropdown()" 
            placeholder="Select location" 
            type="text">
            <ul class="font-thin bg-white -mb-36 mt-12 -ml-40 px-5" id="submenu">
                <ListItemRed>{ heading1 }</ListItemRed>
                <ListItemRed>{ heading2 }</ListItemRed>
                <ListItemRed>{ heading3 }</ListItemRed>
                <ListItemRed>{ heading4 }</ListItemRed>
            </ul>
        <div class="flex ">
            <input   
                class="text-center w-36 my-3 bg-white focus:outline-none" 
                placeholder="Arrival"
                type="text">
            <i class="fa-solid fa-calendar-days text-center box-border border-l-0 border-r-2 my-3 py-3 pr-4 bg-white border-1 text-gray-300 text-xl "></i>
        </div>
        <div class="flex ">
            <input  
                class="text-center w-36 my-3 bg-white focus:outline-none"
                placeholder="Departure"
                type="text" >
            <i class="fa-solid fa-calendar-days text-center box-border border-r-2 py-3 pr-4 my-3 bg-white border-1 text-gray-300 text-xl "></i>
        </div>
        <input   
            class="text-center w-36 my-3 px-0 bg-white focus:outline-none"
            placeholder="Got a code?"
            type="text">
        <ButtonBlack class="my-3">{ button_text }</ButtonBlack>
    </div>  
</section>

<script type="text/javascript">
    function dropdown(){
        document.querySelector('#submenu').classList.toggle('hidden');
    }
    dropdown()
</script>

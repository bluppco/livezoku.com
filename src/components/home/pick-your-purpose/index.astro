---

// IMPORT ASTRO COMPONENTS
import PickYourPurposeCard from "@/components/home/pick-your-purpose/card/index.astro"

// IMPORT ASTRO ATOMS
import HeadingTwo from "@/atoms/headings/two/index.astro"

// GET ASTRO PROPS
const {

    title,
    title1,
    title2,

} = Astro.props

---

<section class="space-y-10 py-10">
    <HeadingTwo>{ title }</HeadingTwo>
    <div class="flex">
        <PickYourPurposeCard
            alternative_text="image"
            source="/img.jpeg"
            title={ title1 }
        />
        <PickYourPurposeCard
            alternative_text="image"
            source="/img.jpeg"
            title={ title2 }
        />
    </div>
</section>
